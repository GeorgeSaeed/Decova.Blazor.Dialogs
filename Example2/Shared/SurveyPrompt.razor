<div class="alert alert-secondary mt-4">
    <span class="oi oi-pencil me-2" aria-hidden="true"></span>
    <strong>@Title</strong>

    <span class="text-nowrap">
        Please take our
        <button  class="font-weight-bold link-dark" onclick=@OnOpenDialogClick>Open Dialog</button>
    </span>
    and tell us what you think.
</div>

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public string? Title { get; set; }

    void OnOpenDialogClick(MouseEventArgs e)
    {
        Console.WriteLine("OnOpenDialogClick");
        U_DialogContainerCircuit.Singleton.DialogCircuit.IsOpen = !U_DialogContainerCircuit.Singleton.DialogCircuit.IsOpen;
    }
}
